    <!--New App Design-->
    <LinearLayout
        android:id="@+id/email_signIn_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="31"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!--App's Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
            <TextView
                android:id="@+id/real_time_data_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#4169e1"
                android:background="?attr/selectableItemBackground"
                android:padding="15dp"
                android:textSize="15sp"
                android:text="SKIP"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_icon_airoundu"/>
        </RelativeLayout>

        <!--Text Input-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="14">

            <com.pce_mason.qi.airpollution.CustomInputLayout
                android:id="@+id/SignInEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:theme="@style/TextInputLayoutSignInCustom"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/SignInEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Edit_Text_Height"
                    android:background="@drawable/edittext_border_enable"
                    android:hint="@string/sign_up_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true" />

            </com.pce_mason.qi.airpollution.CustomInputLayout>

            <com.pce_mason.qi.airpollution.CustomInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:gravity="center"
                app:errorEnabled="true"
                app:hintEnabled="false"
                android:theme="@style/TextInputLayoutSignInCustom"
                android:id="@+id/SignInPasswordLayout">

                <EditText
                    android:id="@+id/SignInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Edit_Text_Height"
                    android:background="@drawable/edittext_border_enable"
                    android:hint="@string/sign_up_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />

            </com.pce_mason.qi.airpollution.CustomInputLayout>
        </LinearLayout>

        <!--Continue Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="7"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="15sp"
                android:textColor="@color/btn_text_basic_color"
                android:id="@+id/SignInAttemptBtn"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custombutton"/>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_basic_color"
                android:textSize="15sp"
                android:background="?attr/selectableItemBackground"
                android:text="Forgot your password?"/>
            <!--Forgot Password & Sign Up-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_basic_color"
                    android:textSize="15sp"
                    android:text="Don't have an account? "/>
                <TextView
                    android:id="@+id/sign_up"
                    android:textSize="15sp"
                    android:textColor="@color/text_basic_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="Sign up"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

